<%= form_for(@portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
        <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_area :subtitle, id: :port_subtitle, class: 'form-control' %>
  </div>
    </div>
    <div class="col-md-6">
       <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :port_body, class: 'form-control', rows: 13 %>
  </div>
    </div>
  </div>

 <ul>
    <%= form.fields_for :technologies do |technology_form| %>
    <li>
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name, class: 'form-control' %>
    </li>
    <% end %>
  </ul>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>